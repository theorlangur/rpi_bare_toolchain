set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR arm)
set(CMAKE_CROSSCOMPILING True)

set(CMAKE_C_COMPILER /usr/bin/clang)
set(CMAKE_CXX_COMPILER /usr/bin/clang++)
set(triple arm-none-eabihf)
set(CMAKE_C_COMPILER_TARGET ${triple})
set(CMAKE_ASM_COMPILER_TARGET ${triple})
set(CMAKE_CXX_COMPILER_TARGET ${triple})
set(LLVM_DEFAULT_TARGET_TRIPLE ${triple})

set(LLVM_TABLEGEN /usr/bin/llvm-tblgen)
set(LLVM_TARGETS_TO_BUILD ARM)
set(LLVM_INCLUDE_UTILS OFF)
set(LLVM_INCLUDE_TESTS OFF)

set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -march=armv6")
set(CMAKE_ASM_FLAGS "${CMAKE_ASM_FLAGS} -march=armv6")
set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -march=armv6")
set(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} -fuse-ld=lld")

set(CMAKE_TRY_COMPILE_TARGET_TYPE STATIC_LIBRARY)
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)
